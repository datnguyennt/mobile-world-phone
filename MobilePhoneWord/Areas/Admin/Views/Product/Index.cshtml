@model IEnumerable<Models.EF.Products>
@{
	ViewBag.Title = "Sản phẩm";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card">
	<div class="card-body card-block">
		<div class="row form-group">
			<div class="col col-md-3">
				<button type="button" class="btn btn-success" id="btnAdd"><i class="fa fa-plus" aria-hidden="true"></i> Thêm mới</button>
			</div>
			<div class="col col-md-6">
				<input type="text" id="txtTimKiem" placeholder="Nhập vào sản phẩm cần tìm" value="" class="form-control">
			</div>
			<div class="col col-md-3">
				<button type="submit" id="btnTimKiem" class="btn btn-success"><i class="fa fa-search"></i>Tìm kiếm</button>
			</div>
		</div>
	</div>
</div>




<div class="content mt-3">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="table-responsive">
							<table class="table table-striped table-bordered table-hover">
								<thead>
									<tr>
										<th>Mã sản phẩm</th>
										<th>Tên sản phẩm</th>
										<th>Hãng sản xuất</th>
										<th>Đơn giá</th>
										<th>Số lượng</th>
										<th>Lượt xem</th>
										<th>Trạng thái</th>
										<th>#</th>
									</tr>
								</thead>
								<tbody id="tblProduct">
								</tbody>
							</table>
						</div>
						<!-- /.table-responsive -->
					</div>
					<!-- /.panel-body -->
				</div>
			</div>
		</div>
	</div>
	<nav class="text-left">
		<ul class="pagination" id="pagelist">
			@*<li>
					<a href="#" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>*@

			@*<li>
					<a href="#" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>*@
		</ul>
	</nav>
</div>

<div class="modal fade" id="modalProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="myModalLabel">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form id="data" method="post" enctype="multipart/form-data">
					<input hidden id="id_Product" value="" type="hidden" />
					<div class="form-group">
						<label>Mã sản phẩm</label>
						<input type="text" class="form-control" id="productcode" placeholder="Nhập vào mã sản phẩm" autofocus="">
					</div>

					<div class="form-group">
						<label>Tên sản phẩm</label>
						<input type="text" class="form-control" id="productname" placeholder="Nhập vào tên sản phẩm" autofocus="">
					</div>
					<div class="form-group">
						<label>Meta title</label>
						<input type="text" class="form-control" id="metatitle" placeholder="Nhập vào tên sản phẩm" autofocus="">
					</div>
					<div class="form-group">
						<label>Hãng</label>
						<select class="form-control" id="category">
							<option>Default Select</option>
							<option>1</option>
						</select>
					</div>
					<div class="form-group">
						<label>Đơn giá</label>
						<input type="text" class="form-control" id="price" placeholder="Nhập vào giá tiền" autofocus="">
					</div>
					<div class="form-group">
						<label>Số lượng</label>
						<input type="text" class="form-control" id="quantity" placeholder="Nhập vào số lượng" autofocus="">
					</div>
					<div class="form-group" id="image">
						<label>Ảnh sản phẩm</label>
						<input type="file" name="imageSave" class="form-control-file" id="imageSave" />
						<div class="form-group" id="imagedisplay">
						</div>
					</div>
					<div class="form-group" hidden>
						<label>Lượt xem</label>
						<input type="text" class="form-control" id="viewcount" placeholder="" autofocus="">

					</div>
					<div class="form-group">
						<label>Trạng thái</label>
						<select class="form-control" id="status">
							<option value="True">Còn hàng</option>
							<option value="False">Hết hàng</option>
						</select>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
				<button id="btnSubmit" type="button" class="btn btn-primary">Lưu</button>
			</div>
		</div>
	</div>
</div>


@section jsfooter{
	<script src="~/Assets/Admin/js/plugin/productcontroller.js"></script>
}
