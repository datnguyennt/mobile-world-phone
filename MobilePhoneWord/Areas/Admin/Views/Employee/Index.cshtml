
@{
	ViewBag.Title = "Nhân viên";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-6">
	<div class="card">
		<div class="card-body card-block">

			@using (Html.BeginForm("Index", "Supply", FormMethod.Get, new { @class = "form-horizontal" }))
			{
				<div class="row form-group">
					<div class="col col-md-3">
						<button type="button" class="btn btn-success" id="btnAdd"><i class="fa fa-plus" aria-hidden="true"></i> Thêm mới</button>
					</div>
					<div class="col col-md-6">
						<input type="text" placeholder="Nhập vào từ cần tìm" value="@ViewBag.SearchString" class="form-control">
					</div>
					<div class="col col-md-3">
						<button type="submit" class="btn btn-success"><i class="fa fa-search"></i>Tìm kiếm</button>
					</div>
				</div>
			}
		</div>
	</div>
</div>
<br />
<div class="content mt-3">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="table-responsive">
							<table class="table table-striped table-bordered table-hover">
								<thead>
									<tr>
										<th>Họ tên</th>
										<th>Giới tính</th>
										<th>Số điện thoại</th>
										<th>Địa chỉ</th>
										<th>Email</th>
										<th>Quyền</th>
										<th>Trạng thái</th>
										<th>#</th>
									</tr>
								</thead>
								<tbody id="tblEmployee">
								</tbody>
							</table>
						</div>
						<!-- /.table-responsive -->
					</div>
					<!-- /.panel-body -->
				</div>
			</div>
		</div>
	</div>
</div>

<form action="">
</form>

<div class="modal fade" id="modalEmployee" tabindex="1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header" id="modalTitle">
				<h4 class="modal-title" id="myModalLabel">Thêm người dùng mới<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button></h4>
			</div>
			<div class="modal-body">

				<div class="panel-body">
					<input hidden id="id_User" value="" type="hidden" />
					<div class="form-group">
						<label>ID</label>
						<input readonly="readonly" type="text" class="form-control" id="id">
					</div>
					<div class="form-group">
						<label>Họ và tên</label>
						<input type="text" class="form-control" id="fullname" placeholder="Nhập họ và tên" autofocus="">
					</div>
					<div class="form-group">
						<label>Giới tính</label>
						<select disabled class="form-control" id="gioitinh">
							<option value="">Chọn giới tính</option>
						</select>
					</div>
					<div class="form-group">
						<label>Ngày sinh</label>
						<input type="date" class="form-control" id="date">
					</div>
					<div class="form-group">
						<label>Tên đăng nhập</label>
						<input type="text" class="form-control" id="username" placeholder="Nhập vào tên đăng nhập" autofocus="">
					</div>
					<div class="form-group">
						<label>Mật khẩu</label>
						<input type="password" class="form-control" id="password" placeholder="Nhập vào mật khẩu" autofocus="">
					</div>
					<div class="form-group">
						<label>Số điện thoại</label>
						<input type="text" class="form-control" id="phone" placeholder="Nhập vào số điện thoại" autofocus="">
					</div>

					<div class="form-group">
						<label>Địa chỉ email</label>
						<input type="text" class="form-control" id="email" placeholder="Nhập vào số điện thoại" autofocus="">
					</div>
					<div class="form-group">
						<label>Địa chỉ</label>
						<input type="text" class="form-control" id="address" placeholder="Nhập vào địa chỉ" autofocus="">
					</div>
					<div class="form-group">
						<label>Là:</label>
						<select disabled class="form-control" id="quyen">
							<option value="">___Là nhân viên___</option>
						</select>
					</div>

					<div class="form-group">
						<label>Trạng thái tài khoản</label>
						<select disabled class="form-control" id="status">
							<option value="">Chọn giới tính</option>
						</select>
					</div>
				</div>
				<!-- /.col-md-12 -->
			</div>

		</div>
		<div class="modal-footer">
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-gray btn-wide btn-rounded" data-dismiss="modal"><i class="fa fa-times"></i>Đóng</button>
				<button id="btnSubmit" type="button" class="btn bg-primary btn-wide btn-rounded"><i class="fa fa-check"></i>Lưu</button>
			</div>
			<!-- /.btn-group -->
		</div>
	</div>
</div>


@section jsfooter{
	<script src="~/Assets/Admin/js/plugin/employeecontroller.js"></script>
}

