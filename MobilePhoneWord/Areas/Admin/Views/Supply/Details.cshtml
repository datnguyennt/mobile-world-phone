@model Models.EF.Suppliers

@{
	ViewBag.Title = "Chi tiết hãng";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-9 mb-5">
	<div class="card">
		<div class="card-body card-block">
			<div class="row form-group">
				<div class="col col-md-3">
					@Html.LabelFor(model => model.SupplyCode, htmlAttributes: new { @class = "form-control-label" })
				</div>
				<div class="col-12 col-md-9">
					<input type="text" id="disabled-input" name="disabled-input" placeholder="@Html.DisplayFor(model => model.SupplyCode)" disabled="" class="form-control">
				</div>
			</div>
			<div class="row form-group mb-5">
				<div class="col col-md-3">
					@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-control-label" })
				</div>
				<div class="col-12 col-md-9">
					<input type="text" id="disabled-input" name="disabled-input" placeholder="@Html.DisplayFor(model => model.Name)" disabled="" class="form-control">
				</div>
			</div>
			<div class="row form-group mb-5">
				<div class="col col-md-3">
					@Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "form-control-label" })
				</div>
				<div class="col-12 col-md-9">
					<img src="~/Assets/Admin/img/@Model.Logo" height="150" width="150" alt="" />
				</div>
			</div>
			<div class="row form-group mb-4">
				<div class="col col-md-3">
					@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-control-label" })
				</div>
				<div class="col-12 col-md-9">
					<input type="text" id="disabled-input" name="disabled-input" placeholder="@Html.DisplayFor(model => model.Email)" disabled="" class="form-control">
				</div>
			</div>
			<div class="row form-group">
				<div class="col col-md-3">
					@Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "form-control-label" })
				</div>
				<div class="col-12 col-md-9">
					<input type="text" id="disabled-input" name="disabled-input" placeholder="@Html.DisplayFor(model => model.Phone)" disabled="" class="form-control">
				</div>
			</div>
		</div>
	</div>
</div>
<a href="@Url.Action("Edit", new { id = Model.Id })" type="button" class="btn btn-primary" >Sửa</a>
<a href="@Url.Action("Index", "Supply")" type="button" class="btn btn-warning">Quay lại</a>
